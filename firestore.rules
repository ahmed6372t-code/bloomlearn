rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Leaderboard: any authenticated user can read, but only the owner can write their entry
    match /leaderboard/{leaderboardId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == leaderboardId;
    }

    // Config (Global Events, feature flags): read-only for authenticated users.
    // Writes are admin-only via Firebase Console â€” never from the client.
    match /config/{document} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
